{{!< default}}

{{> "site-header"}}

{{#author}}

<!-- Author -->
<section class="section-thin section-dark" id="author-about">
	<div class="container">
		{{#if profile_image}}
			<div class="row grid">
				<div class="col-6 col-xs-12">
					<img src="{{profile_image}}" alt="{{{t '{name}â€™s Picture' name=name }}}">
				</div>
				<div class="col-6 col-xs-12">
					<h1>{{name}}</h1>
					<p>{{bio}}</p>
					{{#if location}}<p><b>Location</b>: {{location}}</p>{{/if}}
					{{#if website}}<p><b>Website</b>: <a href="{{website}}">{{website}}</a></p>{{/if}}
				</div>
			</div>
		{{else}}
			<div class="row">
				<h1>{{name}}</h1>
				<p>{{bio}}</p>
				<ul>
					{{#if location}}<li>{{location}}</li>{{/if}}
					{{#if website}}<li><a href="{{website}}">{{website}}</a></li>{{/if}}
				</ul>
			</div>
		{{/if}}
		</div>
	</div>
</section>
{{/author}}
		
<!-- Posts -->
<section class="section-thin-xs section-light dark-enabled" id="posts">
	<div class="container-large">
		{{> "loop"}}
	</div>
</section>

{{!< default}}

{{> "site-header"}}

{{#post}}

<!-- Title Section -->
<section class="section-thin section-dark" id="title">
	<div class="container">
		<div class="row">
			<h1>{{{title}}}</h1>
		</div>
	</div>
</section>

<!-- Body Section -->
<section class="section-light dark-enabled" id="text">
	<div class="container">
		<div class="row">
			{{content}}
		</div>
	</div>
</section>

{{/post}}
